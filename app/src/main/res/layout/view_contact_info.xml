<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "/>

        <EditText
            android:id="@+id/edit_displayName"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Enter name"/>
    </LinearLayout>

    <com.logiforge.tenniscloud.activities.util.EmailListView
        android:id="@+id/view_emails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </com.logiforge.tenniscloud.activities.util.EmailListView>

    <com.logiforge.tenniscloud.activities.util.PhoneListView
        android:id="@+id/view_phones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </com.logiforge.tenniscloud.activities.util.PhoneListView>

</merge>