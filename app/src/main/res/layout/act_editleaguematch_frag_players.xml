<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logiforge.tenniscloud.activities.editleaguematch.PlayersFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.logiforge.tenniscloud.activities.util.ContactInfoView
        android:id="@+id/view_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:nameLabel="Partner"
        custom:nameHint="Partner's Name">
    </com.logiforge.tenniscloud.activities.util.ContactInfoView>

    <com.logiforge.tenniscloud.activities.util.ContactInfoView
        android:id="@+id/view_opponent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:nameLabel="Oponnent 1"
        custom:nameHint="Opennent's Name">
    </com.logiforge.tenniscloud.activities.util.ContactInfoView>

    <com.logiforge.tenniscloud.activities.util.ContactInfoView
        android:id="@+id/view_opponent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:nameLabel="Oponnent 2"
        custom:nameHint="Opennent's Name">
    </com.logiforge.tenniscloud.activities.util.ContactInfoView>

</LinearLayout>
</ScrollView>
