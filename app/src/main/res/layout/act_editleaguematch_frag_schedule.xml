<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.editleaguematch.EditLeagueMatchActivity">

    <Button
        android:id="@+id/btn_add_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp" android:minWidth="0dp"
        android:text="Add Availability"/>

    <ExpandableListView
        android:id="@+id/availability_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</LinearLayout>
